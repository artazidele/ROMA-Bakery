<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ROMABakery" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/pink_900_dark</item>
        <item name="colorPrimaryVariant">@color/pink_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="colorAccent">@color/pink_900_dark</item>
    </style>
    <style name="Button_Style" parent="Theme.ROMABakery">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/double_icon_button_bg</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="Text_Style" parent="Theme.ROMABakery">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Row_Text_Style" parent="Theme.ROMABakery">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="Add_Item_Text_View_Style" parent="Theme.ROMABakery">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Star_Style" parent="Theme.ROMABakery">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/pink_900_dark</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">*   *   *   *   *   *   *   *   *   *   *   *   *</item>
    </style>
    <style name="Add_Item_Radio_Button_Style" parent="Theme.ROMABakery">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Add_Item_Check_Box_Style" parent="Theme.ROMABakery">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Add_Item_Edit_Text_Style" parent="Theme.ROMABakery">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minHeight">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:lineSpacingExtra">24dp</item>
    </style>
</resources>